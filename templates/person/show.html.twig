{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ person.createdAt |date('Y-m-d --- H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ person.updatedAt |date('Y-m-d --- H:i:s') }}</td>
            </tr>
            <tr>
                <th>Activated at at</th>
                <td>{{ person.activatedAt |date('Y-m-d --- H:i:s') }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Prename</th>
                <td>{{ person.prename }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                {% if (person.country) %}
                    <th>Country</th>
                    <td>{{ person.country.name }}</td>
                {% endif %}
            </tr>
            {% if (person.curriculumVitae) %}
                <tr>
                    <th>Curriculum Vitae</th>
                    <td><a href="{{ asset('uploads/curriculumVitae/' ~ person.curriculumVitae) }}" target="_blank"><img src="{{asset('media/icons/cv.png')}}"></img></a></td>
                </tr>
            {% endif %}
            <tr>
                <th>Password</th>
                <td>{{ person.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ person.roles ? person.roles|json_encode : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('person_list') }}" class="btn btn-primary list-person">back to list</a>

    <a href="{{ path('person_edit', {'id': person.id}) }}" class="btn btn-success edit-person" data-id="{{ person.id }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
