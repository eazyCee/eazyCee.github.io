{% extends 'base.html.twig' %}

{% block title %}GIPE 2020{% endblock %}

{% block body %}

<h1 class="text-lg-center"> Profile </h1>

	<table id="users" class="table table-striped">
		<thead>
			<tr><th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
				<th>Username</th>
				<th>Email</th>
				<th>Password</th>
				<th>Roles</th>
				<th>Actions</th
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
			<tr><td>{{user.id}}</td>
			<td>{{user.firstName}}</td>
			<td>{{user.lastName}}</td>
				<td>{{user.username}}</td>
				<td>{{user.email}}</td>
				<td>{{user.password}}</td>
				<td>
				{%for role in user.roles%}
				{{role}} &nbsp;
				{%endfor%}
				<td><a href="/user/{{user.id}}" class ="btn btn-dark">Show</a>
					<a href="/user/edit/{{user.id}}" class="btn btn-light">Edit</a>
					<a href="/user/delete/{{user.id}}" class ="btn btn-danger delete-user" data-id="{{ user.id }}">Delete</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>


{% endblock %}

{% block javascripts %}
<script src="/js/main.js"></script>
{% endblock %}